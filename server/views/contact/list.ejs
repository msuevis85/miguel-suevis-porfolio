<!--Section heading-->
<%- include ../partials/header.ejs %> 
  <!--Section Navigation var-->
<%- include ../partials/main_nav.ejs %> 

<main class="container">
<div class="row">
	<div class="col-lg-12">
		<div class="main-box clearfix">
			<div class="table-responsive">
				<table class="table user-list">
					<thead>
						<tr>
							<th><span>Name</span></th>
							<th><span>Phone Number</span></th>
							<th><span>Email</span></th>
							<th>&nbsp;</th>
						</tr>
					</thead>
					<tbody>
						<% let count = 1; %> 
						<% contacList.forEach(contact => { %>
						<tr>
							<td>
								<% let image = "https://bootdey.com/img/Content/avatar/avatar"+count+".png" ; %>
								<img src="<%= image %>" alt="">
								<a href="#" class="user-link"><%= contact.firstName %></a>
								<span class="user-subhead">Admin</span>
							</td>
							<td>
								<%- contact.phoneNumber %>
							</td>
							<td>
								<a href="#"><%= contact.emailAddress %></a>
							</td>
							<td style="width: 20%;">
								<a href="/add" class="table-link">
									<span class="fa-stack">
										<i class="fa fa-square fa-stack-2x"></i>
										<i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
									</span>
								</a>
								<a href="/contacts/update" class="table-link">
									<span class="fa-stack">
										<i class="fa fa-square fa-stack-2x"></i>
										<i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
									</span>
								</a>
								<a href="/delete" class="table-link danger">
									<span class="fa-stack">
										<i class="fa fa-square fa-stack-2x"></i>
										<i class="fa fa-trash fa-stack-1x fa-inverse"></i>
									</span>
								</a>
							</td>
						</tr>
						<%  count++; %> 
						<% }); %> 
					</tbody>
				</table>
			</div>
			<nav aria-label="...">
				<ul class="pagination justify-content-end">
				  <li class="page-item disabled">
					<a class="page-link" href="#" tabindex="-1">Previous</a>
				  </li>
				  <li class="page-item"><a class="page-link" href="">1</a></li>
				  <li class="page-item active">
					<a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
				  </li>
				  <li class="page-item"><a class="page-link" href="#">3</a></li>
				  <li class="page-item">
					<a class="page-link" href="#">Next</a>
				  </li>
				</ul>
			  </nav>
		</div>
	</div>
</div>
</main>
    

<!--Section bottom nav-->
<%- include ../partials/bottom_nav.ejs %> 
<!--Section footer nav-->
<%- include ../partials/footer.ejs %> 
