  <!--Section heading-->
  <%- include ../partials/header.ejs %> 
  <!--Section Navigation var-->
<%- include ../partials/main_nav.ejs %> 

<!--main container-->

<div class="container-xl px-4 mt-4">
    <!-- Account page navigation-->
   
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-xl-4">
            <!-- Contact picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Contact Picture</div>
                <div class="card-body text-center">
                    <!-- Contact picture image-->
                    <img class="img-account-profile rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                    <!-- Contact picture help block-->
                    <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                    <!-- Contact picture upload button-->
                    <button class="btn btn-primary" type="button">Upload new image</button>
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Contact Details</div>
                <div class="card-body">
                    <form action="/contact/update" method="post">
                        <input type="hidden" name="id" value="<%=contact.id%>"/>
                     
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="firstName">First name</label>
                                <input class="form-control" id="firstName" type="text"  value="<%=contact.firstName%>" >
                            </div>
                            <!-- Form Group (last name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="lastName">Last name</label>
                                <input class="form-control" id="lastName" type="text" value="<%=contact.lastName%>">
                            </div>
                        </div>
                        <!-- Form Row        -->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (organization name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="organizationName">Organization name</label>
                                <input class="form-control" id="organizationName" type="text"  value="<%=contact.organizationName%>">
                            </div>
                        </div>
                        <!-- Form Group (email address)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="emailAddress">Email address</label>
                            <input class="form-control" id="emailAddress" type="email" value="<%=contact.emailAddress%>">
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (phone number)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="phoneNumber">Phone number</label>
                                <input class="form-control" id="phoneNumber" type="tel"  value="<%=contact.phoneNumber%>">
                            </div>
                            <!-- Form Group (birthday)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="birthday">Birthday</label>
                                <input class="form-control" id="birthday" type="text" name="birthday"  value="<%=contact.birthday%>">
                            </div>
                        </div>
                        <!-- Save changes button-->
                        <button class="btn btn-primary" type="submit">Update changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

  <!--Section bottom nav-->
<%- include ../partials/bottom_nav.ejs %> 
<!--Section footer nav-->
<%- include ../partials/footer.ejs %> 